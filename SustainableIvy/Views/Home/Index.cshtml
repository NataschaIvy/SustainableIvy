@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" @*data-interval="6000"*@>
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" @*role="listbox"*@>
        <div class="carousel-item active">
            <img src="~/images/FamilyBeforeLuke.jpg" alt="Our Family" class="d-block w-100" />
            <div class="carousel-caption d-none d-md-block" @*role="option"*@>
                <h5>Welcome to our family's self-sustainability blog!</h5>
                <a class="btn btn-primary" asp-controller="Home" asp-action="About">
                    About us
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/DeerMaleWeb_crop.jpg" alt="Hunting" class="d-block w-100" />
            <div class="carousel-caption d-none d-md-block" @*role="option"*@>
                <h5>Go hunt!</h5>
                <a class="btn btn-primary" asp-controller="Hunting" asp-action="Index">
                    Learn More
                </a>              
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Horses_crop.jpg" alt="Horses" class="d-block w-100" />
            <div class="carousel-caption d-none d-md-block" @*role="option"*@>
                <h5>Livestock</h5>
                <a class="btn btn-primary" asp-controller="Livestock" asp-action="Index">
                    Learn More!
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/SawMill_edit.jpg" alt="Saw Mill" class="d-block w-100" />
            <div class="carousel-caption d-none d-md-block" @*role="option"*@>
                <h5>Harvest your own lumber!</h5>
                <a class="btn btn-primary" asp-controller="Woodwork" asp-action="Index">
                    Learn More
                </a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
